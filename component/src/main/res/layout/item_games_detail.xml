<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_detail_games"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/btn_fav"
                android:layout_width="@dimen/material_24dp"
                android:layout_height="@dimen/material_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/material_12dp"
                android:layout_marginBottom="@dimen/material_12dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_fav_fill" />
        </RelativeLayout>
    </FrameLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_12dp"
        android:layout_marginTop="@dimen/material_12dp"
        android:text="@string/text_name_of_game"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_relased_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_12dp"
        android:layout_marginTop="@dimen/material_4dp"
        android:text="@string/released_date"
        android:textColor="@color/black"
        android:textSize="@dimen/material_16dp" />

    <TextView
        android:id="@+id/tv_metacritic_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_12dp"
        android:layout_marginTop="@dimen/material_4dp"
        android:text="@string/metacritic_rate"
        android:textColor="@color/black"
        android:textSize="@dimen/material_16dp" />

</LinearLayout>