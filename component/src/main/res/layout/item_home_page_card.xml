<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    android:layout_margin="@dimen/material_12dp"
    android:orientation="horizontal">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/iv_home_page_game_card"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_page_game_card_name"
            android:paddingStart="@dimen/material_16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home_page_game_name" />

        <TextView
            android:id="@+id/tv_home_page_game_card_rating_and_released"
            android:paddingStart="@dimen/material_16dp"
            android:gravity="center_vertical"
            android:text="@string/home_page_game_rating_released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>